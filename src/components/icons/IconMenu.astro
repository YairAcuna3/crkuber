---
interface Props {
  size?: number;
  lightColor?: string;
  darkColor?: string;
  className?: string;
  isDark?: boolean;
}

const {
  size = 24,
  lightColor = "#FFFFFF",
  darkColor = "#000000",
  className,
  isDark = false,
} = Astro.props;

const strokeColor = isDark ? darkColor : lightColor;
---

<svg
  width={size}
  height={size}
  viewBox="0 0 24 24"
  xmlns="http://www.w3.org/2000/svg"
  class={className}
  stroke={strokeColor}
  fill="none"
  stroke-width="2"
  stroke-linecap="round"
  stroke-linejoin="round"
>
  <line x1="3" y1="6" x2="21" y2="6"></line>
  <line x1="3" y1="12" x2="21" y2="12"></line>
  <line x1="3" y1="18" x2="21" y2="18"></line>
</svg>
